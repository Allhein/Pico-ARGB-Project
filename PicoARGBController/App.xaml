<Application x:Class="PicoARGBControl.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PicoARGBControl"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Fondo oscuro con suave degradado radial -->
        <RadialGradientBrush x:Key="AppBackgroundBrush" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="1" RadiusY="1">
            <GradientStop Color="#0A0B10" Offset="0"/>
            <GradientStop Color="#0B0D16" Offset="0.6"/>
            <GradientStop Color="#080914" Offset="1"/>
        </RadialGradientBrush>

        <!-- Trazo neón reutilizable -->
        <LinearGradientBrush x:Key="NeonStroke" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#FF00FFD1" Offset="0"/>
            <GradientStop Color="#FF43A5FF" Offset="1"/>
        </LinearGradientBrush>

        <!-- Tarjeta neón para contenedores -->
        <Style x:Key="NeonCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="#0E0E12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeonStroke}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#6A8CFF" BlurRadius="24" ShadowDepth="0" Opacity="0.45"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botón neón -->
        <Style x:Key="NeonButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1A1A22"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="6,6,6,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="14"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource NeonStroke}"
                                BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#222234"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#7DF9FF" BlurRadius="25" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#2C2C3E"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#7DF9FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Controles básicos con bordes neón -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#0B0B12"/>
            <Setter Property="Foreground" Value="#E6E6E6"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeonStroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#0B0B12"/>
            <Setter Property="Foreground" Value="#E6E6E6"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeonStroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="Slider">
            <Setter Property="Foreground" Value="#7DF9FF"/>
        </Style>

        <!-- Corner frame decorations -->
        <Style x:Key="CornerFrame" TargetType="Path">
            <Setter Property="Stroke" Value="{StaticResource NeonStroke}"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="Fill" Value="Transparent"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00D4FF" BlurRadius="8" ShadowDepth="0" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Main window border style -->
        <Style x:Key="MainWindowBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeonStroke}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00D4FF" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
