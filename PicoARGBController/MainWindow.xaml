<Window x:Class="PicoARGBControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PicoARGBControl"
        mc:Ignorable="d"
        Title="Pico ARGB Controller" Height="720" Width="1280" Background="{StaticResource AppBackgroundBrush}" FontFamily="Segoe UI">
    <Window.Resources>
        <!-- 🌈 Brocha RGB animada -->
        <LinearGradientBrush x:Key="AnimatedRGBBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Offset="0.0" Color="#FF0000" x:Name="Stop1"/>
            <GradientStop Offset="0.5" Color="#00FF00" x:Name="Stop2"/>
            <GradientStop Offset="1.0" Color="#0000FF" x:Name="Stop3"/>
        </LinearGradientBrush>

        <!-- 🌈 Storyboard de animación -->
        <Storyboard x:Key="RGBAnimation" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="Stop1"
                    Storyboard.TargetProperty="Color"
                    From="#FF0000" To="#0000FF"
                    Duration="0:0:2" AutoReverse="True"/>
            <ColorAnimation Storyboard.TargetName="Stop2"
                    Storyboard.TargetProperty="Color"
                    From="#00FF00" To="#FF0000"
                    Duration="0:0:2" AutoReverse="True"/>
            <ColorAnimation Storyboard.TargetName="Stop3"
                    Storyboard.TargetProperty="Color"
                    From="#0000FF" To="#00FF00"
                    Duration="0:0:2" AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Main window decorative border -->
        <Border x:Name="RootFrame"
        Grid.RowSpan="2"
        BorderBrush="{StaticResource AnimatedRGBBrush}"
        BorderThickness="3"
        CornerRadius="20"
        Margin="10"
        Background="Transparent">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
            </Border.Effect>
        </Border>

        <!-- Corner decorative frames -->
        <Canvas Grid.RowSpan="2">
            <!-- Top-left corner -->
            <Path Style="{StaticResource CornerFrame}" Canvas.Left="20" Canvas.Top="20"
                  Data="M 0,30 L 0,0 L 30,0"/>
            <!-- Top-right corner -->
            <Path Style="{StaticResource CornerFrame}" Canvas.Right="20" Canvas.Top="20"
                  Data="M -30,0 L 0,0 L 0,30"/>
            <!-- Bottom-left corner -->
            <Path Style="{StaticResource CornerFrame}" Canvas.Left="20" Canvas.Bottom="20"
                  Data="M 0,-30 L 0,0 L 30,0"/>
            <!-- Bottom-right corner -->
            <Path Style="{StaticResource CornerFrame}" Canvas.Right="20" Canvas.Bottom="20"
                  Data="M -30,0 L 0,0 L 0,-30"/>
        </Canvas>

        <!-- Header with Raspberry Pi logo and title -->
        <Border Grid.Row="0" Margin="20,20,20,10" Style="{StaticResource NeonCard}" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- RGB ring + glow around Raspberry logo -->
                <Border x:Name="LogoRing" CornerRadius="65" BorderThickness="0" 
                        BorderBrush="{StaticResource AnimatedRGBBrush}" 
                        Background="{StaticResource AnimatedRGBBrush}"
                        Padding="0.5" Margin="0,0,15,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.7"/>
                    </Border.Effect>
                    <Image x:Name="RaspberryLogo" 
                           Source="pack://application:,,,/Assets/Raspberry_logo.png"
                           Width="80" Height="80" 
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality">
                        
                    </Image>
                </Border>
                <TextBlock Text="Pico ARGB" FontSize="32" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Text="Controller" FontSize="32" Foreground="#FF6B35" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main content -->
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- Left panel: modes -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBlock Text="Pico ARGB Controller" FontSize="28" Foreground="White" FontWeight="Bold" Margin="8"/>
                <Border Height="10"/>
                <StackPanel x:Name="ModesPanel" Orientation="Vertical" VerticalAlignment="Top" >
                    <!-- Buttons inserted from code-behind for color border effect -->
                </StackPanel>

                <!-- Nuevo panel de parámetros por modo -->
                <StackPanel x:Name="ModeParamsPanel" Orientation="Vertical" Margin="0,20,0,0">
                    <!-- Static Color params -->
                    <StackPanel x:Name="StaticParamsPanel" Visibility="Collapsed">
                        <TextBlock Text="Static Color" Foreground="White" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="HEX:" Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBox x:Name="tbStaticHex" Width="100" Text="#FF00D4FF" TextChanged="TbStaticHex_TextChanged"/>
                            <Border x:Name="StaticColorPreview" Width="60" Height="20" CornerRadius="4" BorderBrush="White" BorderThickness="1" Margin="8,0,0,0"/>
                            <Button Content="Aplicar" Margin="8,0,0,0" Padding="8,4" Click="BtnSendMode_Click" Style="{StaticResource NeonButton}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Music params -->
                    <StackPanel x:Name="MusicParamsPanel" Visibility="Collapsed" Margin="0,8,0,0">
                        <TextBlock Text="Music Mode" Foreground="White" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0" VerticalAlignment="Center">
                            <CheckBox x:Name="chkMusic" Checked="ChkMusic_Checked" Unchecked="ChkMusic_Unchecked" Foreground="White" Content="Activar"/>
                            <ProgressBar x:Name="pbLevel" Width="120" Height="16" Margin="12,0,0,0" Maximum="100"/>
                            <TextBlock x:Name="lblLevel" Text="0" Foreground="White" Margin="8,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Sensibilidad" Foreground="White" Margin="0,0,6,0"/>
                            <Slider x:Name="sldSensitivity" Minimum="50" Maximum="300" Value="150" Width="140" ValueChanged="MusicTuning_ValueChanged"/>
                            <TextBlock x:Name="lblSensitivity" Text="150%" Foreground="White" Margin="6,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Máx. intensidad" Foreground="White" Margin="0,0,6,0"/>
                            <Slider x:Name="sldMaxIntensity" Minimum="50" Maximum="100" Value="100" Width="140" ValueChanged="MusicTuning_ValueChanged"/>
                            <TextBlock x:Name="lblMaxIntensity" Text="100" Foreground="White" Margin="6,0,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Otros modos sin parámetros -->
                    <StackPanel x:Name="NoParamsPanel" Visibility="Collapsed" Margin="0,8,0,0">
                        <TextBlock Text="Este modo no tiene parámetros." Foreground="White"/>
                    </StackPanel>
                </StackPanel>

                <!-- Controles de conexión y estado -->
                <StackPanel Orientation="Horizontal" Margin="0,18,0,0" VerticalAlignment="Center">
                    <TextBlock Text="VID:" Foreground="White" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBox x:Name="txtVid" Width="70" Text="20A0"/>
                    <TextBlock Text="PID:" Foreground="White" VerticalAlignment="Center" Margin="8,0,4,0"/>
                    <TextBox x:Name="txtPid" Width="70" Text="423D"/>
                    <Button x:Name="btnConnect" Click="BtnConnect_Click" Padding="8" Margin="12,0,0,0" Style="{StaticResource NeonButton}">Conectar</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <TextBlock Text="Estado:" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock x:Name="lblStatus" Text="Desconectado" Foreground="LightCoral" Margin="8,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock x:Name="lblHint" Text="Esperando conexión..." Foreground="LightBlue" Margin="0,8,0,0" FontStyle="Italic"/>
            </StackPanel>

            <!-- Center: Pico image + fans -->
            <Grid Grid.Column="1">
                <Border Margin="10" CornerRadius="12" Padding="20" Style="{StaticResource NeonCard}" BorderBrush="{Binding Mode=OneWay, Source={StaticResource AnimatedRGBBrush}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- RP2040 Board Image -->
                        <Border Grid.Row="0" CornerRadius="8" Margin="0,0,0,20" Style="{StaticResource NeonCard}" Padding="15">
                            <Image Source="Assets/RP2040.png" Width="200" Height="120" Stretch="Uniform"/>
                        </Border>

                        <!-- RGB Fans Grid -->
                        <Grid Grid.Row="1" Margin="0,10,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Top row fans -->
                            <Border Grid.Row="0" Grid.Column="0" Margin="5" Style="{StaticResource NeonCard}" Padding="10">
                                <local:RGBFanControl x:Name="FanTL" Width="120" Height="120"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="1" Margin="5" Style="{StaticResource NeonCard}" Padding="10">
                                <local:RGBFanControl x:Name="FanTR" Width="120" Height="120"/>
                            </Border>

                            <!-- Bottom row fans -->
                            <Border Grid.Row="1" Grid.Column="0" Margin="5" Style="{StaticResource NeonCard}" Padding="10">
                                <local:RGBFanControl x:Name="FanBL" Width="120" Height="120"/>
                            </Border>
                            <Border Grid.Row="1" Grid.Column="1" Margin="5" Style="{StaticResource NeonCard}" Padding="10">
                                <local:RGBFanControl x:Name="FanBR" Width="120" Height="120"/>
                            </Border>
                        </Grid>

                        <!-- Status indicators -->

                    </Grid>
                </Border>
            </Grid>

            <!-- Right: solo Log y acciones -->
            <StackPanel Grid.Column="2" Margin="20,0,0,0">
                <TextBlock Text="Acciones" Foreground="White" FontWeight="Bold" FontSize="18" Margin="0,0,0,8"/>
                <Button x:Name="btnSaveApply" Click="BtnSaveApply_Click" Padding="8" Width="220" Margin="0,0,0,8" Style="{StaticResource NeonButton}">Guardar y aplicar</Button>
                <Button x:Name="btnSendMode" Click="BtnSendMode_Click" Padding="8" Width="220" Style="{StaticResource NeonButton}">Enviar Modo</Button>

                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Log (últimas acciones)" Foreground="White" FontWeight="Bold" />
                    <TextBox x:Name="txtLog" Height="300" IsReadOnly="True" Background="#0B0B0B" Foreground="#DDD" Margin="0,8,0,0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
